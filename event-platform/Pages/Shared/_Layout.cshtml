<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - event_platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/event_platform.styles.css" asp-append-version="true" />
      <style>
        <style>
    html, body, .wrapper, main {
        height: 100%;
    }

        .wrapper {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
</style>

</head>
<body class="h-100">
<div class="wrapper"
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: #EC4067;">Smilevents</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index" style="color: #031147;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy" style="color: #031147;">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Profile" style="color: #031147;">Profile</a>

                        </li>
                    </ul>
                </div>
            </div>
            <ul class="navbar-nav ml-auto" style="margin-right: 20px">
                <li class="nav-item">
                    <form method="get" action="/Account/Logout" class="form-inline">
                        <button type="submit" class="btn btn-link nav-link" style="color: #EC4067;">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>
    </header>


        <main role="main" class="pb-3" style="background= #FBE2B0">
            <div class="container">
            @RenderBody()
            </div>
        </main>


  <footer style="background-color: #FBE2B0 !important" class="border-top footer text-muted mt-auto">
            <div class="container">
                &copy; 2023 - Smilevents - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
   </footer>
</div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>