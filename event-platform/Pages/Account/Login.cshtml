@page
@model event_platform.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoginViewModel.Email"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="LoginViewModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoginViewModel.Password"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="LoginViewModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="LoginViewModel.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="LoginViewModel.RememberMe"></label>
            </div>
            <div class="col">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col">
                <a class="btn btn-link" href="/Account/Register">Register</a>
            </div>
        </div>
    </form>
</div>